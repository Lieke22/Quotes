<% content_for :head do %>

<link rel="stylesheet" href="//cdn.jsdelivr.net/jquery.superslides/0.6.2/stylesheets/superslides.css">
<meta http-equiv="refresh" content="10">

<style type="text/css">
  h1 {
    font-weight: 300;
    color: white;
    text-shadow: 0px 1px 1px rgb(0, 0, 0);
    margin: 30px 0px;
    font-size: 3em;
  }

  .container {
    position: relative;
    width: 50%;
    max-width: 900px;
    left: 90px;
    top: 13%;
    padding: 10px 20px;

    background: none repeat scroll 0% 0% rgba(0, 0, 0, 0.3);
    /*padding: 1px 10px;*/
    box-shadow: 0px 0px 23px 5px rgba(0, 0, 0, 0.4);
    border-radius: 3px 3px 3px 3px;    
  }

mark{
  background-color: transparent;
  text-decoration: none;
  -webkit-transition: 500ms linear 0s;
  -moz-transition: 500ms linear 0s;
  -o-transition: 500ms linear 0s;
  transition: 500ms linear 0s;
  outline: 0 none;
  color: #fff;
  text-shadow: -1px 1px 8px #ffc, 1px -1px 8px #fff;
}

}
</style>
<% end %>

<div id="slides">
  <div class="slides-container">
    <li>
      <div class="ui text menu">
        <div class="right item">
          <%= link_to quotes_path(@quote), data: { no_turbolink: true} do %>
          <i class="circular teal large setting icon"></i> 
          <% end %>
        </div>
      </div>
      <% if @quote %>
      <img src= "<%= @quote.image_url %>" width="1024" height="682">
      <div class="container">
       <h1><%= highlight(@quote.quote, @quote.most_significant_word) %>
        <i> <%= @quote.author %> </i></h1>
        <p>
        </p>
      </div>
      <% else %>
      <img src= "http://www.hdwallpapers.in/walls/sky_colors-wide.jpg" width="1024" height="682">
      <div class="container">
       <h1><%= highlight("I quote others only in order to better express myself", "quote") %>
        <i> Montagne </i></h1>
        <div class ="paragraph">
        <p> <h4>Unfortunately, there are no quotes in the database yet. You can load the fixtures or wait a minute :) -- Lieke Boon </h4>
        </p></div>
      </div>
      <% end %>
    </li>
  </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
<script src="'http://www.hotelparador.com/wp-content/plugins/wp-supersized/js/jquery.animate-enhanced.min.js?ver=0.75'"></script>
<script src="//cdn.jsdelivr.net/jquery.superslides/0.6.2/jquery.superslides.js" type="text/javascript" charset="utf-8"></script>
<script>
  $(function() {
    $('#slides').superslides({
      hashchange: true
    });
  });
</script>

















